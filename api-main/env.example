# API Main (Gateway) Configuration
API_MAIN_PORT=3000
API_VERSION=1
NODE_ENV=development

# Microservices Configuration
AUTH_SERVICE_HOST=127.0.0.1
AUTH_SERVICE_PORT=3001

CATALOG_SERVICE_HOST=127.0.0.1
CATALOG_SERVICE_PORT=3002

IAM_SERVICE_HOST=127.0.0.1
IAM_SERVICE_PORT=3003
# Note: IAM Service is a pure TCP microservice (no HTTP endpoints)
# Auth Service and other services communicate with IAM via TCP on port 3003

# Database Configuration (Oracle) - Common
DB_HOST=localhost
DB_PORT=1521
DB_SERVICE_NAME=XE
DB_USERNAME=your_username
DB_PASSWORD=your_password

# Auth Service Database (Oracle)
DB_AUTH_HOST=localhost
DB_AUTH_PORT=1521
DB_AUTH_SERVICE_NAME=XE
DB_AUTH_USERNAME=your_username
DB_AUTH_PASSWORD=your_password

# IAM Service Database (Oracle) - shares same database as Auth
DB_IAM_HOST=localhost
DB_IAM_PORT=1521
DB_IAM_SERVICE_NAME=XE
DB_IAM_USERNAME=your_username
DB_IAM_PASSWORD=your_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-this-in-production
REFRESH_TOKEN_EXPIRES_IN=7d

# Logging Configuration
LOG_LEVEL=info                    # Levels: error, warn, info, debug, verbose
LOG_TO_FILE=false                 # true: log to files, false: console only
# Note: In production, set LOG_TO_FILE=true and LOG_LEVEL=info or warn

# Swagger Configuration
ENABLE_SWAGGER=true
SWAGGER_TITLE=SEEMS Hub API
SWAGGER_DESC=NestJS Microservice with Clean Architecture and TCP Communication
SWAGGER_VERSION=1.0.0
SWAGGER_PREFIX=api/v1/docs
