{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@app/common": [
        "libs/common/src"
      ],
      "@app/common/*": [
        "libs/common/src/*"
      ],
      "@app/logger": [
        "libs/logger/src"
      ],
      "@app/logger/*": [
        "libs/logger/src/*"
      ],
      "@app/shared-decorators": [
        "libs/shared-decorators/src"
      ],
      "@app/shared-decorators/*": [
        "libs/shared-decorators/src/*"
      ],
      "@app/shared-dto": [
        "libs/shared-dto/src"
      ],
      "@app/shared-dto/*": [
        "libs/shared-dto/src/*"
      ],
      "@app/shared-exceptions": [
        "libs/shared-exceptions/src"
      ],
      "@app/shared-exceptions/*": [
        "libs/shared-exceptions/src/*"
      ],
      "@app/shared-guards": [
        "libs/shared-guards/src"
      ],
      "@app/shared-guards/*": [
        "libs/shared-guards/src/*"
      ],
      "@app/shared-types": [
        "libs/shared-types/src"
      ],
      "@app/shared-types/*": [
        "libs/shared-types/src/*"
      ],
      "@app/utils": [
        "libs/utils/src"
      ],
      "@app/utils/*": [
        "libs/utils/src/*"
      ]
    }
  }
}